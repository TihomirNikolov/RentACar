<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:util="clr-namespace:MicroinvestProject.Utilities">


    <Style x:Key="BirthDateInvalidMessage" TargetType="{x:Type TextBlock}">
        <Setter Property="Text" Value=" " />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsBirthDateValid}" Value="false">
                <Setter Property="Text" Value="{util:Localization strBirthDateInvalid}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsBirthDateValid}" Value="true">
                <Setter Property="Text" Value=" " />
            </DataTrigger>
        </Style.Triggers>
    </Style>

